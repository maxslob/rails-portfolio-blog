<div class="wrapper skinny_wrapper">
  <h1 id="page_title">Latest Posts</h1>
  <hr>

<% @posts.each do |post| %>
	<div class="post">
	  <h2><a href="#"><%= link_to post.title, post %></a></h2>
    <p class="date"><%= post.created_at.strftime('%A, %B %d') %></p>
	  <hr>
  </div>
<% end %>

	
</div> <!-- post-wrapper -->

<%= will_paginate @posts %>