  <!-- STYLESHEETS & JS -->
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <!-- <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %> -->
  <%= csrf_meta_tags %>

  <meta name="author" content="maxslob">
  <meta name="description" content="Portfolio & Personal website about Developer and Designer - maxslob">
  <meta name="keywords" content="maxslob,maxslob developer,maxslob designer,maxslob portfolio,maxslob website,maxslob.me, maxslob blog, maxslob front-end,maxslob front-end developer,maxslob ruby,maxslob js,maxslob javascript, maxslob css, maxslob css3, maxslob info, maxslob about, maxslob hire, maxslob intern">

