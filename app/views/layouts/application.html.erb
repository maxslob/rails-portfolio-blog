    // BLOG PSOT HOVER EFFECT
$('.item-info').hover(onHover, outHover);
function onHover(){
  $(this).find('.hover').closest('.hover').css('display', 'flex');
  $('.hover a').css('left', '-50px');
  $('.hover a').animate({'left': '0px'}, 200);
}

function outHover(){
  $('.hover').css('display', 'none');
}

//REVEAL TEXT

var textToAdd = "Contact me if you want to give a feedback, advice, information, help, knowledge... I'll appreciate it =)";
var placeHolder = 0;
$('#text').click(function(){
    $(this).hide();
    var textAdder = setInterval(function(){
    document.getElementById('main-paragraph').innerHTML += textToAdd.charAt(placeHolder);
    if (++placeHolder == textToAdd.length){
        clearInterval(textAdder);
    }
}, 50);
});



//DESKTOP MENU
var desktopMenuItem = $('#desktopMenu a');
function clearSelected () {
  desktopMenuItem.removeClass('selected');
}
desktopMenuItem.click(function(){
  clearSelected();
  $(this).addClass('selected');
});

//HIDE MENU ON HOVER
function hideMenu() {
  setTimeout(function(){$('#mainMenuOpener').show();}, 300);
  $('.sidebar').animate({'left': '-250px'}, 300);
  $('.sidebar').removeClass('rainbow');
}

setTimeout(function(){$('#mainMenuOpener').show();}, 0);
  $('.sidebar').animate({'left': '-250px'}, 0);
  $('.sidebar').removeClass('rainbow');


$('#mainMenuOpener').mouseenter(function(){
  $('.sidebar').animate({'left': '0px'}, 300);
  setTimeout(function(){$('.sidebar').addClass('rainbow');}, 300);
  $(this).hide();
});

$('.wrapper').mouseenter(hideMenu);

$('.sidebar').mouseleave(hideMenu);


//MODAL
var $modalCloseBtn = $('#close');
var $modalOpenBtn = $('#modalOpenBtn');
var $modal = $('.modal');

$modalOpenBtn.click(function(){
  $modal.slideDown(333);
  $('#mainMenuOpener').hide();
  $modalCloseBtn.show();
});
$modalCloseBtn.click(function(){
  $modal.slideUp(333);
  $(this).hide();
  setTimeout(function(){$('#mainMenuOpener').show();}, 333);
});

//BUTTON DISPLAY ON HOVER
$('.col').mouseenter(function(){
  $(this).find('h2').closest('h2').css('position', 'relative');
  $(this).find('h2').closest('h2').animate({'top': '-20px'}, 100);
  $(this).find('button').closest('button').slideDown('fast').css('position', 'relative').css({'top': '-20px'});
});
$('.col').mouseleave(function(){
  $(this).find('h2').closest('h2').animate({'top': '0px'}, 100);
  $(this).find('button').closest('button').slideUp('fast');
});



