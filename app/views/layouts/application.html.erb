</head>
<body>
  <header>
   <div class="wrapper">
      <a href="/"><h1>maxslob<span>.me</span></h1></a>
      <nav>
        <ul id="mobile-menu">
           <li><%= link_to "Projects", projects_path %></li>
           <li><%= link_to "Blog", posts_path %></li></li>
           <li><%= link_to "Contact", new_contact_path %></li>
           <li><% if user_signed_in? %>
              <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
            <% end %></li>
         </ul> 
        <ul class="menu">
          <li><%= link_to "Expeirence & Work", projects_path %></li>
          <li><%= link_to "Blog", posts_path %></li>
          <li><%= link_to "Contact", new_contact_path %></li>
          <li>
             <% if user_signed_in? %>
              <%= link_to "Sign Out", destroy_user_session_path, method: :delete %>
            <% end %>
        </ul>
        <button id="menu-button"><i class="fa fa-bars"></i></button>
      </nav>  
    </div>
  </header>


  <% if notice %>
  <p class="notice"><%= notice %></p>
  <% elsif alert %>
  <p class="alert"><%= alert %></p>
  <% end %>

  <%= yield %>

  <footer class="clearfix">
    <div class="wrapper">
      <p class="copyright">&copy; 2015 maxslob </p>
      <div class="hire">
          <a href="/projects/hire-me">hire me</a>        
      </div>
      <nav>
        <a href="https://twitter.com/max_slob" target="_blank"><i class="fa fa-twitter"></i></a>
        <a href="https://github.com/maxslob" target="_blank"><i class="fa fa-github-alt"></i></a>
        <a href="http://linkedin.com/in/maxslob" target="_blank"><i class="fa fa-linkedin"></i></a>
      </nav>
    </div>
  </footer>
  <script>
   /*MENU FUNCTIONALITY*/
   $('#menu-button').click(function(){
     $(this).toggleClass('active');
     $('#mobile-menu').fadeToggle(200);
   });
  </script>
</body>
</html>
