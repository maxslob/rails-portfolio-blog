//MENU
var $menuBtn = $('#menu-btn');
var $menu = $('#mobile-menu');

var $mobileTitle = $('.mobile-title');
var $mobileLogo = $('.mobile-logo');

var pageTitle = $('.mobile-title').text();
var bool = false;

$menuBtn.on('click', openMenu);

function openMenu(){

  $menu.slideToggle('fast');

  if(!bool){$('.mobile-title').text('MENU');}else{$('.mobile-title').text(pageTitle);}
  bool = !bool;

  $('#mobile-header').toggleClass('hidden');
}

